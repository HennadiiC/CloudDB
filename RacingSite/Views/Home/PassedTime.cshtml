@model PassedTimeViewModel

@using (Html.BeginForm("PassedTime", "Home", FormMethod.Get))
{
    @Html.DropDownList("CheckpointId", new SelectList(Model.Checkpoints, "Id", "Name", Model.Filter.CheckpointId))
    @Html.DropDownList("RacerId", new SelectList(Model.Racers, "Id", "FullName", Model.Filter.RacerId))

    <input type="submit" value="Показати" />
}

Гонщик під номером @Model.Filter.RacerId пройшов КТ-@Model.Filter.CheckpointId за @Model.PassedTimeInMinutes хв.