@model RacerSpeed

@using (Html.BeginForm("RacerSpeed", "Home", FormMethod.Get))
{
    @Html.DropDownList("RacerId", new SelectList(Model.Racers, "Id", "FullName", Model.SelectedRacer))
    @Html.DropDownList("CheckpointId", new SelectList(Model.CheckPoints, "Id", "Name", Model.SelectedCheckPoint))

    <input type="submit" value="Показати" />
}

