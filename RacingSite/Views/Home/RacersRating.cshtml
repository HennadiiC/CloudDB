@model RacersRatingViewModel

@using (Html.BeginForm("RacersRating", "Home", FormMethod.Get))
{
    @Html.DropDownList("checkpointId", new SelectList(Model.CheckPoints, "Id", "Name", Model.SelectedCheckPoint))

    <input type="submit" value="Показати" />
}

<p>Рейтинг гравців для КТ під номером @Model.SelectedCheckPoint</p>

<table class="fixed_headers">
    <thead>
    <tr>
        <th>Номер Гонщика</th>
        <th>Стартував</th>
        <th>Прийшов на КТ</th>
        <th>Потрачений час</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var r in Model.Rating)
    {
        <tr>
            <td>@r.RacerId </td>
            <td>@r.Start</td>
            <td>@r.End</td>
            <td>@((r.End - r.Start).TotalMinutes) хв</td>
        </tr>
    }
    </tbody>
</table>

